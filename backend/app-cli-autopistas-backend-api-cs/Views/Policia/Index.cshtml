@model IEnumerable<Project.Models.Policia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StrNombrePolicia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrApellidoPolicia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrTelefono)
            </th>
            <th></th>
        </tr>
    </thead>

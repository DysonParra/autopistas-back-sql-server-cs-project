            <td>
                @Html.DisplayFor(modelItem => item.StrNombrePolicia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrApellidoPolicia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrTelefono)
            </td>
